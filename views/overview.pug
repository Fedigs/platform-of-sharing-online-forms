extends base

block content
    if user
        <div class="nform">
            <a href="/newForm"><input type="button" value="create new Form" class="btn btn--green qst"/></a>
    
        </div>
    main.main
        
        
        .card-container
            each quest in questionnaires
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/questionnaires/questionnaire.png`, alt=`${quest.titre}`)
                        h3.heading-tertirary
                            span= quest.titre

                    .card__details
                        //h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
                        //p.card__text= tour.summary
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span= quest.description
                        .card__data
                            svg.card__icon
                                <i class="far fa-calendar-alt"></i>
                            span= quest.createdAt.toLocaleString('en-us', {day:'numeric' ,month: 'long', year: 'numeric'})
                        //.card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-flag')
                            span= `${tour.locations.length} stops`
                        //.card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= `${tour.maxGroupSize} people`

                    .card__footer
                        //p
                            span.card__footer-value= `$${tour.price}`
                            | 
                            span.card__footer-text per person
                        //p.card__ratings
                            span.card__footer-value= tour.ratingsAverage
                            | 
                            span.card__footer-text= `rating (${tour.ratingsQuantity})`
                        a.btn.btn--green.btn--small(href=`/questionnaires/${quest._id}`) Details